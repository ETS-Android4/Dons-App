<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.donatorsapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DonatorsApp">
        <activity
            android:name=".Splash_Page"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserProfile"
            android:exported="false">
        </activity>
        <activity
            android:name=".Admin_Page"
            android:exported="false">
        </activity>
        <activity
            android:name=".DonatePage"
            android:exported="false">
        </activity>
        <activity
            android:name=".HistoryPage"
            android:exported="false">
        </activity>
        <activity
            android:name=".Login_Page"
            android:exported="false">
        </activity>
        <activity
            android:name=".Sign_up_page"
            android:exported="false">
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>